<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.OtherReportActivity"
    tools:showIn="@layout/activity_other_report">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="Title"
        />
    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Message"
            />
        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <Button
            android:id="@+id/sendreport"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginBottom="15dp"
            android:textColorHighlight="@color/black"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/btn_primary_to_white"
            android:textColor="@color/white"
            android:text="SEND REPORT"
            android:textAllCaps="false" />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>