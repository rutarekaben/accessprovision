<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ReportActivity"
    tools:showIn="@layout/activity_report">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="Date"
        />
    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="month"
        />
    <EditText
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:inputType="phone"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="year"
        />
    <EditText
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="District"
        />
    <EditText
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"
        android:background="@color/colorPrimary"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="parade info"
            android:textAllCaps="true"
            android:gravity="center"
            android:textStyle="bold"
            />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="ABS"
        />
    <EditText
        android:id="@+id/abs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="ADM"
        />
    <EditText
        android:id="@+id/adm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="CLOSE ARR"
        />
    <EditText
        android:id="@+id/closearr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="DUTY"
        />
    <EditText
        android:id="@+id/duty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="ONP"
        />
    <EditText
        android:id="@+id/onp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="PASS"
        />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="RANK"
        />
    <EditText
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="SICK"
        />
    <EditText
        android:id="@+id/sick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="sickout"
        />
    <EditText
        android:id="@+id/sickout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="TOTAL"
        />
    <EditText
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
    <Button
        android:id="@+id/sendreport"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginBottom="15dp"
        android:textColorHighlight="@color/black"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_primary_to_white"
        android:textColor="@color/white"
        android:text="SEND PARADE REPORT"
        android:textAllCaps="false" />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>