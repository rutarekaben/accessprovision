<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.OtherReportActivity"
    tools:showIn="@layout/activity_view_parade_report_detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_rl"
        android:layout_marginLeft="@dimen/margin_rl"
        android:padding="@dimen/small_padding"
        android:text="Abscent:"
        />
    <TextView
        android:id="@+id/abs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:background="@drawable/edit_text_with_edge"
        android:layout_marginLeft="@dimen/margin_rl"
        android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Admitted:"
            />
        <TextView
            android:id="@+id/adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="On Duty:"
            />
        <TextView
            android:id="@+id/duty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="On Parade:"
            />
        <TextView
            android:id="@+id/onp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Pass:"
            />
        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Rank:"
            />
        <TextView
            android:id="@+id/rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Sick:"
            />
        <TextView
            android:id="@+id/sick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="Description:"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginLeft="@dimen/margin_rl"
            android:padding="@dimen/small_padding"
            android:text="TOTAL:"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:background="@drawable/edit_text_with_edge"
            android:layout_marginLeft="@dimen/margin_rl"
            android:layout_marginRight="@dimen/margin_rl"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>